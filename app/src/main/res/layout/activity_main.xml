<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95FDFCF9"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="870dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView78"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_border_color"
            android:drawablePadding="5dp"
            android:fontFamily="@font/mitr"
            android:hint="หัวเรื่อง"
            android:textSize="22sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editText54"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:fontFamily="@font/mitr"
            android:gravity="start|top"
            android:hint="ระบุหัวเรื่องเหตุการณ์"
            android:inputType="textMultiLine"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_list"
            android:drawablePadding="5dp"
            android:fontFamily="@font/mitr"
            android:hint="ประเภท"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/mitr"
            android:gravity="center"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_sync_problem"
            android:drawablePadding="5dp"
            android:fontFamily="@font/mitr"
            android:hint="ระดับความรุนแรง"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/mitr"
            android:gravity="center"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_sort"
            android:drawablePadding="5dp"
            android:fontFamily="@font/mitr"
            android:text="รายละเอียด"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:fontFamily="@font/mitr"
            android:gravity="start|top"
            android:hint="มีอะไรเกิดขึ้นบ้าง"
            android:inputType="textMultiLine"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_pin_drop"
            android:drawablePadding="5dp"
            android:fontFamily="@font/mitr"
            android:text="สถานที่เกิดเหตุ"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:fontFamily="@font/mitr"
            android:gravity="start|top"
            android:hint="เหตุเกิดที่ไหน"
            android:inputType="textMultiLine"
            android:textSize="16dp" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="50dp"
            android:background="#C1FFEB3B"
            android:fontFamily="@font/mitr"
            android:gravity="center"
            android:text="ต่อไป"
            android:textStyle="bold" />


        <Button
            android:id="@+id/buttonOther"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="20dp"
            android:background="#B08BC34A"
            android:fontFamily="@font/mitr"
            android:gravity="center"
            android:text="ไปหน้าอื่นๆ"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:background="#CCFFCC"
            android:fontFamily="@font/mitr"
            android:gravity="center"
            android:text="login"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
</ScrollView>